<Window
    x:Class="CameraOpenCV.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CameraOpenCV"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Camera"
    Width="640"
    Height="480"
    Background="Black"
    BorderBrush="Black"
    ResizeMode="NoResize"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Canvas>
        <TextBlock
            Canvas.Left="0"
            Canvas.Top="0"
            Panel.ZIndex="1"
            Background="Black"
            Foreground="White"
            Text="Camera" />
        <Image
            Canvas.Left="0"
            Canvas.Top="0"
            Canvas.Right="0"
            Source="{Binding CameraCaptureSource.Value}" />
        <Button
            Canvas.Left="320"
            Canvas.Bottom="5"
            Width="52"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Command="{Binding ShutterCommand}">
            <Image RenderOptions.BitmapScalingMode="HighQuality" Source="./Resource/shutter-icon.png" />
        </Button>
    </Canvas>
</Window>
